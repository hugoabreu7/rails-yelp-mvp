<h1>🍜 All restaurants in the world 🍜</h1>

<div class="row">
  <div class="col-sm-12 col-md-6 col-md-offset-3 box">
    <ul>
    <% @restaurants.each do |restaurant| %>
    <li> <%= link_to restaurant_path(restaurant) do %>
      <div class=hover> <%= restaurant.name %> </div>
      </li><% end %>
    <% end %>
    </ul>
  </div>
</div>

<h3 style="padding: 20px 0px">New restaurant opened? Click below!</h3>
<div style="text-align: center"> <p class="btn btn-warning"><%= link_to "New", new_restaurant_path %></p></div>
